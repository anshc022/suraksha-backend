{
  "name": "suraksha-backend",
  "version": "1.0.0",
  "description": "Backend API for Suraksha Yatra safety application",
  "main": "dist/server.js",
  "private": true,
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "postbuild": "echo 'Build completed successfully'",
    "lint": "echo 'Add ESLint later'",
    "seed": "ts-node-dev --transpile-only src/scripts/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "health": "curl http://localhost:4000/api/health || echo 'Health check failed'"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.0",
    "socket.io": "^4.7.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.3",
    "jest": "^30.1.3",
    "mongodb-memory-server": "^10.2.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
